{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowJs": false,
    "resolveJsonModule": true,
    "noEmit": true,
    "moduleResolution": "node",
    "strict": true,
    "types": ["jest", "node"],
    "typeRoots": ["src/types", "./node_modules/@types"]
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*", "__tests__/**/*", "src"]
}